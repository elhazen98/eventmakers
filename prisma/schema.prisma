generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(cuid())
  username String
  email String @unique
  password String
  role String @default("user")
  avatarUrl String?

  session session[]
}

model event {
  id String @id @default(cuid())
  eventName String
  eventDescription String
  eventDate DateTime
  createdAt DateTime
  updatedAt DateTime
  isPublished Boolean
  isDeleted Boolean
  imageUrl String
  authorId String
}

model participants {
  id String @id @default(cuid())
  name String
  email String
  phoneNumber BigInt
  eventId String
}

model session {
  id String @id @default(cuid())
  createdAt DateTime
  expiredAt DateTime
  userId String
  user user @relation(fields: [userId], references: [id])
}